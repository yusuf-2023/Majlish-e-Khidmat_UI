# Save exact versions
save-exact=true

# Enable strict SSL
strict-ssl=true

# Set default node version
engine-strict=true

# Enable lockfile
package-lock=true

# Set registry
registry=https://registry.npmjs.org/

# Set progress bar
progress=true

# Set fetch retries
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Set cache settings
cache-min=3600
cache-max=86400

# Set timeout
timeout=60000

# Audit settings
audit=true
audit-level=moderate

# Set git tag version prefix
tag-version-prefix="v"

# Development settings
save-prefix=''
